@* @page
@model StudentManagement.Views.Admin.IndexModel
@{
} *@

@model IEnumerable<Student>

@{
    ViewData["Title"] = "Student List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.admission_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.admission_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fees)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@item.Student_ID">Edit</a> |
                    <a asp-action="DeleteStudent" asp-route-id="@item.Student_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddStudent" class="btn btn-primary">Add New Student</a>

