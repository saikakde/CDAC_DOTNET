@model Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student_Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student_Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mobile_number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mobile_number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student_Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student_Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.admission_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.admission_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fees)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditDetails" asp-route-id="@Model.Student_ID" class="btn btn-primary">Edit</a>
</div>

